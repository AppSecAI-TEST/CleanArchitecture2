<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light">

    <TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/settings_color_button"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_xlarge"/>

    <View
        style="@style/HorizontalDivider"
        android:layout_above="@+id/button"/>

    <com.larswerkman.holocolorpicker.ColorPicker
        android:id="@+id/color_picket"
        android:layout_marginTop="@dimen/color_picker_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <com.larswerkman.holocolorpicker.SVBar
        android:id="@+id/svbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color_picket"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/color_picker_bar"/>

    <com.larswerkman.holocolorpicker.OpacityBar
        android:layout_centerHorizontal="true"
        android:id="@+id/opacitybar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/svbar"
        android:layout_marginTop="@dimen/color_picker_bar"/>

    <com.larswerkman.holocolorpicker.SaturationBar
        android:id="@+id/saturationbar"
        android:layout_below="@+id/opacitybar"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/color_picker_bar"/>

    <com.larswerkman.holocolorpicker.ValueBar
        android:id="@+id/valuebar"
        android:layout_marginTop="@dimen/color_picker_bar"
        android:layout_below="@+id/saturationbar"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
