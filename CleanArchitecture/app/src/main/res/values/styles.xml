<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:dropDownListViewStyle">@style/PopupMenu</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:typeface">sans</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColorHint">@color/gray_switch</item>
    </style>

    <style name="EditTextStyle_dark" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edittext_background_dark</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:typeface">sans</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColorHint">@color/gray_dark</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="VerticalDividerDark">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_dark</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="HorizontalDividerDark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/text_dark</item>
    </style>

    <style name="HorizontalDividerBlue2dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="BaseBorderlessButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/borderless_button_size</item>
        <item name="android:minHeight">@dimen/borderless_button_size</item>
    </style>

    <style name="LightBorderlessButtonStyle" parent="BaseBorderlessButtonStyle">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:background">@drawable/bg_light_selector</item>
    </style>

    <style name="SkyBorderlessButtonStyle" parent="BaseBorderlessButtonStyle">
        <item name="android:textColor">@color/text_dark_selector</item>
        <item name="android:background">@drawable/bg_sky_selector</item>
    </style>

    <style name="DialogTitleTextStyle">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_dialog_title</item>
    </style>

    <style name="ThemeDialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogMessageTextStyle">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="ListDialogItemStyle">
        <item name="android:background">@drawable/dialog_item_selector</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/padding_8dp</item>
        <item name="android:paddingBottom">@dimen/padding_8dp</item>
        <item name="android:paddingLeft">@dimen/padding_8dp</item>
        <item name="android:paddingRight">@dimen/padding_8dp</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="BaseTextStyle" parent="@android:style/Widget.TextView" />

    <style name="HelveticaTextStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/divider_color</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColor">@color/popup_menu_item_selector</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:itemBackground">@drawable/popup_menu_selector</item>
    </style>

    <style name="PopupMenu_dark" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/divider_color</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textColor">@color/popup_menu_item_selector_dark</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:itemBackground">@drawable/popup_menu_selector_dark</item>
    </style>

    <style name="Switch" parent="AppTheme">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/orange</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/gray_text</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/gray_text</item>
    </style>

</resources>
